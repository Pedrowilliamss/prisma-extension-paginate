{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "declaration": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/tests",
    "src/lib",
  ]
}